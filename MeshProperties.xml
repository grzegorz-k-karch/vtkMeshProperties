<ServerManagerConfiguration>
  <ProxyGroup name="filters">
   <SourceProxy name="MeshProperties" class="vtkMeshProperties" label="Mesh Properties">
     <InputProperty
        name="Input"
        command="SetInputConnection">
           <ProxyGroupDomain name="groups">
             <Group name="sources"/>
             <Group name="filters"/>
           </ProxyGroupDomain>
           <DataTypeDomain name="input_type">
             <DataType value="vtkDataSet"/>
           </DataTypeDomain>
      </InputProperty>
      <OutputPort index="0"
                  name="text" />

      <Hints>
      	<ShowInMenu category="Extensions" />
      </Hints>

   </SourceProxy>
 </ProxyGroup>
</ServerManagerConfiguration>
